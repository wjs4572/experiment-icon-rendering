{
  "compilerOptions": {
    "checkJs": true,
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": false,
    "noEmit": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"]
  },
  "include": ["tests/**/*.js", "tests/**/*.d.ts"],
  "exclude": ["node_modules", "src"]
}
